@model VisitRegistrationApplication.Models.Visit
@{
    ViewBag.Title = "Visit";
    var employeeId = ViewBag.EmployeeId;
    var employeeFirstName = ViewBag.EmployeeFirstName;
    var employeeLastName = ViewBag.EmployeeLastName;

    var userId = ViewBag.UserId;
}

<fieldset class="margin-top-fieldset">
    <div>
        <legend class="">Zapisz do @employeeFirstName @employeeLastName</legend>
    </div>
    <div class="label-danger">@ViewBag.ErrorEmailMessage</div>
    @using (Html.BeginForm("Visit", "Employee", FormMethod.Post))
    {
        <div class="control-group">
            <div class="controls">
                @Html.TextBoxFor(x => x.UserId, new { @Value = userId })
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                @Html.TextBoxFor(x => x.EmployeeId, new { @Value = employeeId })
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input type="date" id="startDate" name="startDate"
                       min="2021-01-17" max="2022-12-31">
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label for="time">Wybierz godzinę:</label>
                <select name="time" id="time">
                    <option value="8">08:00</option>
                    <option value="9">09:00</option>
                    <option value="10">10:00</option>
                    <option value="11">11:00</option>
                    <option value="12">12:00</option>
                    <option value="13">13:00</option>
                    <option value="14">14:00</option>
                    <option value="15">15:00</option>
                </select>
            </div>
        </div>

        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <input class="btn btn-success" type="submit" value="Zapisz się" />
            </div>
        </div>

    }
</fieldset>
